[
    {
      "selector": "node",
      "style": {
        "backgroundColor": "#4a56a6",
        "width": 30,
        "height": 30,
        "label": "data(name)",
        "overlay-padding": "6px",
        "z-index": "10",
        "text-outline-color": "#4a56a6",
        "text-outline-width": "2px",
        "color": "white",
        "fontSize": 20
      }
    },
    {
      "selector": "node:selected",
      "style": {
        "border-width": "6px",
        "border-color": "#AAD8FF",
        "border-opacity": "0.5",
        "background-color": "#77828C",
        "width": 50,
        "height": 50,
        "text-outline-color": "#77828C",
        "text-outline-width": 8
      }
    },
    {
      "selector": "edge",
      "style": {
        "width": "data(weight)",
        "line-color": "#AAD8FF",
        "target-arrow-color": "#6774cb",
        "target-arrow-shape": "triangle",
        "curve-style": "bezier"
      }
    },
    {
      "selector": "edge[directed='true']",
      "style": {
        "target-arrow-color": "#6774cb",
        "target-arrow-shape": "triangle",
        "curve-style": "bezier"
      }
    }
  ]